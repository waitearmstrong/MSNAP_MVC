@model IEnumerable<Fall2019Group10App.Models.Voucher>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "List All Vouchers";
}

<!DOCTYPE html>
<!-- Not sure why it didnt pull in the bootstrap library from
the project, made me link an external one to style correctly
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
-->
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListAllVouchers</title>
</head>



<body>
    <div>
        <h1>@ViewData["Title"]</h1>

        <table class="table table-bordered table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Voucher ID</th>
                    <th scope="col">Owner Name</th>
                    <th scope="col">Voucher Amount</th>
                    <th scope="col">Clinic Name</th>
                    <th scope="col">Date Reconciled</th>
                    <th scope="col">Date Sent</th>
                    <th scope="col">Date Used</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Voucher currentVoucher in Model)
                {
                <tr>
                    <th scope="row">@currentVoucher.VoucherID</th>
                    <td>@currentVoucher.Request.Owner.FullName</td>
                    <td>@string.Format("{0:C}", currentVoucher.VoucherAmount)</td>
                    <td>@currentVoucher.Clinic.ClinicName</td>
                    <td>@currentVoucher.DateReconciled</td>
                    <td>@currentVoucher.DateSent</td>
                    <td>@currentVoucher.DateUsed</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
